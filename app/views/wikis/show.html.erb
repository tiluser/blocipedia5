<div>
    <h1>
        <%= @wiki.title %><br>
        <small>
            submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %> 
        </small>
    </h1>
</div>

<div class="row">
    <div class="col-md-8">
        <p><%= @wiki.body %></p>        
    </div>
</div>

<div class="col-md-4">
    <%= link_to "Edit Wiki Article", edit_wiki_path(@wiki), class: 'btn btn-success' %>
</div>

<div class="col-md-4">
    <%= link_to "Delete Wiki Article", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this article?' } %>
</div>

